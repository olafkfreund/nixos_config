{
  "$schema": "${pkgs.swaynotificationcenter}/etc/xdg/swaync/configSchema.json",
  "positionX": "right",
  "positionY": "bottom",
  "layer": "overlay",
  "layer-shell": true,
  "cssPriority": "application",
  

  "control-center-margin-top": 5,
  "control-center-margin-bottom": 5,
  "control-center-margin-right": 5,
  "control-center-margin-left": 5,
  "notification-icon-size": 64,
  "notification-body-image-height": 128,
  "notification-body-image-width": 200,
  "control-center-width": 400,
  "control-center-height": 650,
  "notification-window-width": 350,
  

  "timeout": 8,
  "timeout-low": 5,
  "timeout-critical": 0,
  "fit-to-screen": true,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 200,
  "hide-on-clear": false,
  "hide-on-action": true,
  "script-fail-notify": true,
  

  "notification-sound": true,
  "sound-file": "/run/current-system/sw/share/sounds/freedesktop/stereo/message.oga",
  "sound-volume": 70,
  

  "critical-sound": true,
  "critical-sound-file": "/run/current-system/sw/share/sounds/freedesktop/stereo/dialog-warning.oga",
  "critical-sound-volume": 85,
  

  "widgets": [
    "title",
    "dnd",
    "menubar#actions",
    "volume",
    "notifications",
    "mpris"
  ],
  
  "widget-config": {
    "title": {
      "text": "Notifications",
      "clear-all-button": true,
      "button-text": " Clear All "
    },
    
    "menubar#actions": {
      "menu#powermode-buttons": {
        "label": " 󰌪 ",
        "position": "left",
        "actions": [
          {
            "label": "󰓅 Performance",
            "command": "powerprofilesctl set performance && notify-send 'Power Profile' 'Set to Performance Mode' -i power-profile-performance"
          },
          {
            "label": "󰗑 Balanced",
            "command": "powerprofilesctl set balanced && notify-send 'Power Profile' 'Set to Balanced Mode' -i power-profile-balanced"
          },
          {
            "label": "󱐋 Power-saver",
            "command": "powerprofilesctl set power-saver && notify-send 'Power Profile' 'Set to Power Saver Mode' -i power-profile-power-saver"
          }
        ]
      },
      
      "menu#screenshot": {
        "label": "󰩭  ",
        "position": "left",
        "actions": [
          {
            "label": "󰹑  Whole screen",
            "command": "grimblast --notify --cursor --freeze copy output"
          },
          {
            "label": "󰩭  Window / Region",
            "command": "grimblast --notify --cursor --freeze copy area"
          },
          {
            "label": "󰈔  Save to file",
            "command": "grimblast --notify --cursor save area ~/Pictures/Screenshots/$(date +%Y-%m-%d_%H-%M-%S).png"
          }
        ]
      },
      
      "menu#record": {
        "label": " 󰕧 ",
        "position": "left",
        "actions": [
          {
            "label": "󰹑  Record screen",
            "command": "record screen & ; swaync-client -t"
          },
          {
            "label": "󰩭  Record selection",
            "command": "record area & ; swaync-client -t"
          },
          {
            "label": "󰻃  Record GIF",
            "command": "record gif & ; swaync-client -t"
          },
          {
            "label": "  Stop",
            "command": "record stop"
          }
        ]
      },
      
      "menu#power-buttons": {
        "label": "⏼  ",
        "position": "right",
        "actions": [
          {
            "label": "󰌾   Lock",
            "command": "swaylock"
          },
          {
            "label": "󰜉  Reboot",
            "command": "systemctl reboot"
          },
          {
            "label": "  Shut down",
            "command": "systemctl poweroff"
          }
        ]
      },
      
      "menu#clipboard": {
        "label": " 󰅇 ",
        "position": "right",
        "actions": [
          {
            "label": "  Show clipboard",
            "command": "cliphist list | rofi -dmenu -p \"Clipboard\" | cliphist decode | wl-copy"
          },
          {
            "label": "󱃔  Clear history",
            "command": "cliphist wipe && notify-send 'Clipboard' 'History cleared' -i edit-clear"
          }
        ]
      }
    },
    
    "volume": {
      "label": " ",
      "expand-button-label": "",
      "collapse-button-label": "",
      "show-per-app": true,
      "show-per-app-icon": true,
      "show-per-app-label": false
    },
    
    "dnd": {
      "text": "󰂛 Do Not Disturb"
    },
    
    "mpris": {
      "image-size": 85,
      "image-radius": 8,
      "show-track-info": true
    }
  },
  

  "notification-visibility": {
    "spotify": {
      "state": "enabled",
      "urgency": "Low",
      "app-name": "Spotify"
    },
    "volume": {
      "state": "enabled",
      "urgency": "Low", 
      "app-name": "*volume*"
    },
    "critical": {
      "state": "enabled",
      "urgency": "Critical",
      "app-name": "*"
    }
  }
}